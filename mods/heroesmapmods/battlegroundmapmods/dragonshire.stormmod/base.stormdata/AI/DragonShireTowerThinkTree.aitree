<?xml version="1.0" encoding="us-ascii"?>
<tree>
    <!-- Load the base tower think tree -->
    <include file="AI/BaseTowerThinkTree.aitree"/>

    <node id="Search_TowerFindDragonKnight" name="Tower Find closest Dragon Knight" type="FindBestTarget" comment="Search for nearby Dragon Knights">
        <property name="TargetTypes" value="Visible,Heroic"/>
        <property name="ExcludeTypes" value="Player,Ally,Neutral,Creep,Missile,Item,Stasis,Dead,Hidden,Invulnerable,ImmuneToAOE,IgnoredByTowerAI"/>
        <property name="DistanceFactor" value="2"/>
        <property name="FocusTarget" valueSource="variable" value="AttackTarget"/>
        <property name="BumpMaxDistanceToWeaponRange" value="true"/>
        <property name="AddSelfRadiusToMaxTargetDistance" value="true"/>
        <property name="OutputTarget" value="AttackTarget"/>
        <property name="UnitType" value="VehicleDragon"/>
    </node>

    <mod id="And_TowerTargetSelector">
        <insertChild id="Search_TowerFindDragonKnight" before="Search_TowerFindBestHero"/>
    </mod>
</tree>