include "TriggerLibs/NativeLib"
include "TriggerLibs/GameDataHelperLib"

include "LibVHER_h"

//--------------------------------------------------------------------------------------------------
// Library: Volskaya Heroes
//--------------------------------------------------------------------------------------------------
// External Library Initialization
void libVHER_InitLibraries () {
    libNtve_InitVariables();
    libGDHL_InitVariables();
}

// Triggers
//--------------------------------------------------------------------------------------------------
// Trigger: Map Initialization
//--------------------------------------------------------------------------------------------------
bool libVHER_gt_MapInitialization_Func (bool testConds, bool runActions) {
    // Automatic Variable Declarations
    // Actions
    if (!runActions) {
        return true;
    }

    libGDHL_gv_heroSgtHammerUseEffectForBFGTargetCalculation = true;
    return true;
}

//--------------------------------------------------------------------------------------------------
void libVHER_gt_MapInitialization_Init () {
    libVHER_gt_MapInitialization = TriggerCreate("libVHER_gt_MapInitialization_Func");
    TriggerAddEventMapInit(libVHER_gt_MapInitialization);
}

void libVHER_InitTriggers () {
    libVHER_gt_MapInitialization_Init();
}

//--------------------------------------------------------------------------------------------------
// Library Initialization
//--------------------------------------------------------------------------------------------------
bool libVHER_InitLib_completed = false;

void libVHER_InitLib () {
    if (libVHER_InitLib_completed) {
        return;
    }

    libVHER_InitLib_completed = true;

    libVHER_InitLibraries();
    libVHER_InitTriggers();
}

