<?xml version="1.0" encoding="us-ascii"?>
<tree>
    <!-- Load the base tower think tree -->
    <include file="AI/BaseTowerThinkTree.aitree"/>

    <node id="Search_TowerFocusVolskayaVehicle" name="Tower Focus current VolskayaVehicle" type="FindBestTarget" comment="Focus on VolskayaVehicle above all other targets">
        <property name="UnitType" value="VolskayaVehicle"/>
        <property name="FocusTarget" valueSource="variable" value="AttackTarget"/>
        <property name="OnlyFocusTarget" value="true"/>
        <property name="BumpMaxDistanceToWeaponRange" value="true"/>
        <property name="AddSelfRadiusToMaxTargetDistance" value="true"/>
        <property name="OutputTarget" value="AttackTarget"/>
    </node>

    <node id="Search_TowerFindVolskayaVehicle" name="Tower Find closest VolskayaVehicle" type="FindBestTarget" comment="Search for nearby VolskayaVehicle">
        <property name="UnitType" value="VolskayaVehicle"/>
        <property name="FocusTarget" valueSource="variable" value="AttackTarget"/>
        <property name="BumpMaxDistanceToWeaponRange" value="true"/>
        <property name="AddSelfRadiusToMaxTargetDistance" value="true"/>
        <property name="OutputTarget" value="AttackTarget"/>
    </node>

    <mod id="And_TowerTargetSelector">
        <insertChild id="Search_TowerFocusVolskayaVehicle" before="Search_TowerFocusSummoned"/>
        <insertChild id="Search_TowerFindVolskayaVehicle" before="Search_TowerFocusSummoned"/>
    </mod>
</tree>