include "TriggerLibs/GameLib"

include "LibPSCL_h"

//--------------------------------------------------------------------------------------------------
// Library: Percent Scaling
//--------------------------------------------------------------------------------------------------
// External Library Initialization
void libPSCL_InitLibraries () {
    libGame_InitVariables();
}

// Triggers
//--------------------------------------------------------------------------------------------------
// Trigger: Percent Scaling Initialization
//--------------------------------------------------------------------------------------------------
bool libPSCL_gt_PercentScalingInitialization_Func (bool testConds, bool runActions) {
    // Actions
    if (!runActions) {
        return true;
    }

    libGame_gf_TogglePercentScaling(true);
    return true;
}

//--------------------------------------------------------------------------------------------------
void libPSCL_gt_PercentScalingInitialization_Init () {
    libPSCL_gt_PercentScalingInitialization = TriggerCreate("libPSCL_gt_PercentScalingInitialization_Func");
}

void libPSCL_InitTriggers () {
    libPSCL_gt_PercentScalingInitialization_Init();
}

//--------------------------------------------------------------------------------------------------
// Library Initialization
//--------------------------------------------------------------------------------------------------
bool libPSCL_InitLib_completed = false;

void libPSCL_InitLib () {
    if (libPSCL_InitLib_completed) {
        return;
    }

    libPSCL_InitLib_completed = true;

    libPSCL_InitLibraries();
    libPSCL_InitTriggers();
}

