<?xml version="1.0" encoding="us-ascii"?>
<tree>
    <!-- Load the base minion think tree, as summons should use very similar logic -->
    <include file="GameData/AI/Minion.aitree"/>

    <!-- if we can't advance down a lane, move to our owner -->    
    <node id="MoveToOwner" name="MoveToOwner" type="MoveToUnit" comment="Orders the minion to follow the creator unit">
        <property name="Target" valueSource="intrinsic" value="OwnerUnit"/>
        <property name="StartRange" value="2"/>
        <property name="StopRange" value="2"/>
        <property name="Acquire" value="true"/>        
        <property name="FailIfUnpathable" value="true"/>
    </node>

    <mod id="Root">
        <insertChild id="MoveToOwner" after="Advance"/>
    </mod>
    
    <!-- make Moving fail if unpathable, because now we have a backup plan -->
    <mod id="LeashToLane">
        <property name="FailIfUnpathable" value="true"/>
    </mod>
    <mod id="Advance">
        <property name="FailIfUnpathable" value="true"/>
    </mod>
</tree>
